############################################
# Telegram Bot Template - 环境变量示例
############################################

# 机器人基础配置
BOT_TOKEN=1234567890:YOUR_BOT_TOKEN
SUPPORT_URL=
SUPER_ADMIN_IDS=123456789,987654321
RATE_LIMIT=0.5
DEBUG=True
PROJECT_NAME=桜色服务助手

# 数据库配置 (MySQL)
DB_HOST=localhost
DB_PORT=3306
DB_USER=telegram_bot
DB_PASS=telegram_bot
DB_NAME=telegram_bot
DB_ECHO=False
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30

# API 服务配置
# 开发环境建议使用 127.0.0.1，如需对外提供访问可改为 0.0.0.0
API_HOST=127.0.0.1
API_PORT=8000
API_DEBUG=True
# 支持逗号分隔或 JSON 数组
API_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Docker Compose 相关（如使用 docker-compose）
COMPOSE_PROJECT_NAME=telegram-bot-template
ADMIN_PORT=3000
WEBHOOK_PORT=8443
