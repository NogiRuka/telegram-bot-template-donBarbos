# ===========================================
# Telegram 机器人配置
# ===========================================
# 你的 Telegram Bot Token，从 @BotFather 获取
BOT_TOKEN=1234567890:YOUR_BOT_TOKEN
# 客服或支持链接
SUPPORT_URL=https://example.com/
# 速率限制
RATE_LIMIT=0.5
# 是否开启调试模式
DEBUG=True
# 绑定的群组用户名 (无需 @)
GROUP=yourgroupname
# 超级管理员 ID (拥有最高权限)
SUPER_ADMIN_IDS=123456789
# 拥有者 ID
OWNER_ID=123456789
# 管理员通知群组 ID (通常是私有群组，用于接收注册、购买等通知)
OWNER_MSG_GROUP=-100xxxxxxxxxx
# 其他管理员 ID，逗号分隔
ADMIN_IDS=
# 项目名称 (显示在横幅等位置)
PROJECT_NAME=小桜


# ===========================================
# 时区配置
# ===========================================
TIMEZONE=Asia/Shanghai


# ===========================================
# 数据库配置（MySQL）
# ===========================================
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASS=root
DB_NAME=lustfulboy
# 是否回显SQL语句（调试用，默认关闭）
DB_ECHO=False
# 数据库连接池配置
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30


# ===========================================
# API 服务配置
# ===========================================
# 监听地址，0.0.0.0 表示监听所有网卡
API_HOST=0.0.0.0
# API 端口
API_PORT=8000
# 允许跨域的源，逗号分隔
API_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
# Web 管理界面端口
WEB_PORT=3000


# ===========================================
# Emby 配置
# ===========================================
# Emby 服务基础地址，例如：https://your-emby.com
EMBY_BASE_URL=https://your-emby.com
# Emby 端口，默认 443（https）或 80（http）
EMBY_PORT=443
# Emby API Key，用于请求头 X-Emby-Token
EMBY_API_KEY=YOUR_EMBY_API_KEY
# Emby 模板用户ID，用于创建用户时复制其配置与策略
EMBY_TEMPLATE_USER_ID=YOUR_TEMPLATE_USER_ID

# 通知配置
# 接收上新通知的频道或群组ID，支持 @channelname 或数字ID (-100xxx)
# 支持多个ID，用逗号分隔，例如: @mychannel,-100123456789
NOTIFICATION_CHANNEL_ID=@yourchannel,-100xxxxxxxxxx

# ===========================================
# Docker Compose 相关
# ===========================================
COMPOSE_PROJECT_NAME=telegram-bot-template
WEBHOOK_PORT=8443
